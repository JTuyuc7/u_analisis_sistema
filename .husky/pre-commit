#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ðŸš€ Running lint checks before committing..."

# Function to run linting and attempt auto-fix
run_lint() {
  local dir=$1
  echo "ðŸ” Linting in $dir..."
  
  cd "$dir" || exit 1
  
  # Run lint check
  if ! npm run lint; then
    echo "âš ï¸ Lint issues found in $dir. Attempting to fix..."
    
    # Try auto-fixing issues
    if npm run lint:fix; then
      echo "âœ… Issues fixed automatically in $dir. Staging changes..."
      git add .
    else
      echo "âŒ Auto-fix failed in $dir. Please fix the issues manually before committing."
      exit 1
    fi
  fi
  
  cd - > /dev/null || exit 1
}

# Run linting for both backend and frontend
run_lint backend
# run_lint frontend

echo "âœ… All linting checks passed!"
exit 0